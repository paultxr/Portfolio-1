{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
<section class="welcome-section">
    <div class="container-fluid justify-content-around align-items-center ">
        <div class="row">
            <section class="col-md-8 presentation-section">
                <div class="row">
                    <div class="col-md-4">
                        <img class="size-picture" src="https://i.postimg.cc/jjdWmKp4/Julien.png" alt="Julien"/>
                    </div>
                    <div class="col-md-8">
                        <h1>Hi, Je suis Julien</h1>
                        <p><em>un dévelopeur web</em></p>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>
<section class="projects-section">
    <h1 class="title-project"> Mes projets</h1>
    <div class="container container-licence">
        <div class="row justify-content-around align-items-center">
            {% for project in projects %}
            <div class="col-lg-4 col-md-4 col-xs-6 m-4">
                <div class="cards-color" style="width: 18rem;">
                    <img src="{{ project.picture }}" class="card-img-top" alt="...">
                    <div class="card-body">
                    <h5 class="card-title">{{ project.name }}</h5>
                    <p class="card-text">{{ project.description }}</p>
                    <p class="card-text">Technologies utilisées: {{ project.techno }}</p>
                    <a href="{{ project.url }}" class="btn btn-primary color-button">Lien du site</a>
                    <a href="{{ project.urlGitHub }}" class="btn btn-primary color-button">Lien Git Hub</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
<section class="welcome-section">
    <article class="contain center">
        <h2>Let's work together...</h2>
        <p>Quality | Results | Impression</p>
        <section class="contacts">
          <a href="https://www.linkedin.com/in/julien-willette-2939561b6/" class="contact-btn" target="_blank"><i class="fab fa-linkedin"></i></a>
          <a href="https://github.com/julienWillette" class="contact-btn" target="_blank"><i class="fab fa-github"></i></a>
          <a href="#" class="contact-btn" target="_blank">Twitter</a>
          <a href="#" class="contact-btn" target="_blank">Email</a>
          <a href="#" class="contact-btn" target="_blank">Call me</a>
        </section>
      </article>
</section>
{% endblock %}
